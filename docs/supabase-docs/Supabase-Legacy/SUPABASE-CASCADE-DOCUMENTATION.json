6. Safety Measures
6.1 Backup Before Delete
sql-- Create backup of user data before deletion
CREATE OR REPLACE FUNCTION backup_user_before_delete(p_user_id UUID)
RETURNS JSON AS $$
DECLARE
    v_backup_id UUID;
    v_user_email TEXT;
BEGIN
    v_backup_id := gen_random_uuid();
    
    -- Get user email
    SELECT email INTO v_user_email 
    FROM users_universal 
    WHERE id = p_user_id;
    
    -- Create backup record
    INSERT INTO audit.deleted_users_backup (
        backup_id,
        user_id,
        user_email,
        backup_date,
        backup_data
    ) VALUES (
        v_backup_id,
        p_user_id,
        v_user_email,
        NOW(),
        jsonb_build_object(
            'users_universal', (SELECT row_to_json(u) FROM users_universal u WHERE id = p_user_id),
            'user_profiles', (SELECT row_to_json(p) FROM user_profiles p WHERE user_id = p_user_id),
            'tutor_details', (SELECT row_to_json(t) FROM tutor_details t WHERE user_id = p_user_id)
        )
    );
    
    RETURN json_build_object(
        'backup_id', v_backup_id,
        'user_email', v_user_email,
        'backed_up_at', NOW()
    );
END;
$$ LANGUAGE plpgsql;
